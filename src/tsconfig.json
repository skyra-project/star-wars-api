{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "../generated/api",
		"baseUrl": ".",
		"paths": {
			"#arguments/*": ["./arguments/*"],
			"#assets/*": ["./assets/*"],
			"#jsonAssets/*.json": ["./assets/*.json"],
			"#dexdata/*": ["./assets/pokedex-data/*"],
			"#resolvers/*": ["./resolvers/*"],
			"#scalars/*": ["./scalars/*"],
			"#services/*": ["./services/*"],
			"#structures/*": ["./structures/*"],
			"#utils/*": ["./utils/*"],
			"#root/*": ["*"]
		},
		"composite": true
	},
	"include": [".", "./assets/**/*.json"]
}
