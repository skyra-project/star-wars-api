{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"baseUrl": ".",
		"paths": {
			"#arguments/*": ["./arguments/*"],
			"#assets/*": ["./assets/*"],
			"#resolvers/*": ["./resolvers/*"],
			"#scalars/*": ["./scalars/*"],
			"#services/*": ["./services/*"],
			"#structures/*": ["./structures/*"],
			"#utils/*": ["./utils/*"],
			"#test-utils/*": ["./testUtils/*"],
			"#root/*": ["../src/*"]
		}
	},
	"include": ["."],
	"references": [{ "path": "../src" }]
}
