{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"baseUrl": ".",
		"paths": {
			"#test-utils/*": ["./testUtils/*"],
			"#arguments/*": ["../src/arguments/*"],
			"#assets/*": ["../src/assets/*"],
			"#resolvers/*": ["../src/resolvers/*"],
			"#scalars/*": ["../src/scalars/*"],
			"#services/*": ["../src/services/*"],
			"#structures/*": ["../src/structures/*"],
			"#utils/*": ["../src/utils/*"],
			"#root/*": ["../src/*"]
		}
	},
	"include": ["."],
	"references": [{ "path": "../src" }]
}
